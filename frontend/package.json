{
  "name": "ecommerce-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prettier": "prettier \"**/*.+(json|js|jsx)\"",
    "format:check": "npm run prettier -- --check",
    "format:fix": "npm run prettier -- --write",
    "lint": "eslint --ext .js,.jsx ./src --no-error-on-unmatched-pattern",
    "lint:fix": "eslint --ext .js,.jsx ./src --no-error-on-unmatched-pattern --fix"
